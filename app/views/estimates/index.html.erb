<p id="notice"><%= notice %></p>

<h1>作成済み 見積もり一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= link_to '詳細ページ', estimate %></td>
        <td><%= link_to '編集する', edit_estimate_path(estimate) %></td>
        <td><%= link_to '見積もりを削除する', estimate, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

