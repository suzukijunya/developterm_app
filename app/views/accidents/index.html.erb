<p id="notice"><%= notice %></p>

<h1>Accidents</h1>

<table>
  <thead>
    <tr>
      <th>Case</th>
      <th>Time</th>
      <th>Address</th>
      <th>Content</th>
      <th>Repair request schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accidents.each do |accident| %>
      <tr>
        <td><%= accident.case %></td>
        <td><%= accident.time %></td>
        <td><%= accident.address %></td>
        <td><%= accident.content %></td>
        <td><%= accident.repair_request_schedule %></td>
        <td><%= link_to 'Show', accident %></td>
        <td><%= link_to 'Edit', edit_accident_path(accident) %></td>
        <td><%= link_to 'Destroy', accident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

