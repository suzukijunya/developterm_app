<p id="notice"><%= notice %></p>

<h1>修繕工事 一覧</h1>

<table>
  <thead>
    <tr>
      <th>見積もり番号</th>
      <th>項目</th>
      <th>修繕日</th>
      <th>詳細</th>
      <th>修繕完了</th>
      <th>修繕状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.case %></td>
        <td><%= repair.case %></td>
        <td><%= repair.time %></td>
        <td><%= repair.content %></td>
        <td><%= repair.complete %></td>
        <td><%= repair.status %></td>
        <td><%= link_to '詳細ページへ', repair %></td>
        <td><%= link_to '編集する', edit_repair_path(repair) %></td>
        <td><%= link_to '削除する', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

